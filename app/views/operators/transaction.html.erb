    <!-- Sidebar ends -->
    <!-- Main Content starts -->
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

      <h2 class="sub-header">Edit Transaction</h2>

      <div class="table-responsive">
        <table class="table table-striped">
          <tbody>
            <tr>
              <td><b>Transaction ID</b></td>
              <td colspan="2"><%= @deposit.id %></td>
            </tr>
            <tr>
              <td><b>Update On</b></td>
              <td colspan="2"><%= @deposit.updated_at %></td>
            </tr>
            <tr>
              <td><b>Email Address</b></td>
              <td colspan="2"><%= @deposit.user.username %></td>
            </tr>
            <tr>
              <td><b>Contact Number</b></td>
              <td><%= @deposit.user.phone_number %></td>
              <td><b>Account Holder:</b> <%= @deposit.user.account_holder %></td>
            </tr>
            <tr>
              <td><b>Types</b></td>
              <td>DEPOSIT</td>
              <td><b>Bank Account:</b><%= @deposit.user.account_no %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td><b>Bank Name:</b> <%= @deposit.user.bank_name %></td>
            </tr>
            <tr>
              <td><b>Amount</b></td>
              <td><%= @deposit.amount %></td>
              <td><b>Bank Branch:</b><%= @deposit.user.bank_branch %></td>
            </tr>
            <tr>
              <td><b>Member login IP: </b></td>
              <td> <%= @deposit.user.current_sign_in_ip %></td>
              <td><b>Product:</b> <%= @deposit.title %>
            </tr>
            <tr>
              <td><b>Bank Account</b></td>
              <td colspan="2"><%= BankAccount.find(@deposit.bank_account).title %></td>
            </tr>
            <tr>
              <td><b>Date/Time</b></td>
              <td colspan="2"><%= @deposit.deposit_date_time %></td>
            </tr>
            <tr>
              <td><b>Channel</b></td>
              <td colspan="2"><%= @deposit.deposit_method %></td>
            </tr>
            <%= form_tag("/operator/transaction/#{@deposit.id}") do |l| %>
              <tr>
                <td><b>Status</b></td>
                <td colspan="2">
                 <%= select_tag "status", "<option>pending</option><option>accepted</option><option>rejected</option>".html_safe %>
                </td>
              </tr>
              <tr>
                <td><b>Remark</b></td>
                <td colspan="2">
                <%= text_field_tag :remark, "", class: "form-control" %>
                </td>
              </tr>
              <tr>
                <td><b></b></td>
                <td><input type="submit" value="Update Transaction" class="btn btn-success"></td>
                <td>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

